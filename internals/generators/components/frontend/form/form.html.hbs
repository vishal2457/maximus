<gb-form [form]='{{name}}Form' [zodSchema]='{{zodSchema}}'>
  <div class='grid grid-cols-3 gap-4'>
    {{#each schemaValue.properties}}
    {{#unless this.skipForm}}
    {{#eq this.type 'string'}}
      <gb-input
        label='{{properCase @key}}'
        [control]='formControls.{{@key}}'
        [showErrors]='showErrors'
      />
    {{/eq}}
    {{#eq this.type 'number'}}
      <gb-input
        label='{{properCase @key}}'
        [control]='formControls.{{@key}}'
        [showErrors]='showErrors'
        type="number"
      />
    {{/eq}}
    {{/unless}}
    {{/each}}
  </div>
    {{#each schemaValue.properties}}
    {{#eq this.formType 'textarea'}}
      <gb-textarea
        label='{{properCase @key}}'
        [control]='formControls.{{@key}}'
        [showErrors]='showErrors'
      />
     {{/eq}}
    {{/each}}
</gb-form>
